<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_screen_bkg"
    tools:context=".chessGame.scenes.SettingsActivity">

    <!-- Settings Title (Fixed at the top) -->
    <TextView
        android:id="@+id/tvSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="32dp" />

    <!-- ScrollView for all settings content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvSettingsTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Game Volume Label -->
            <TextView
                android:id="@+id/tvGameVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game Volume"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"/>

            <!-- Game Volume Slider -->
            <SeekBar
                android:id="@+id/seekBarGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" />

            <!-- Music Volume Label -->
            <TextView
                android:id="@+id/tvMusicVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music Volume"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"/>

            <!-- Music Volume Slider -->
            <SeekBar
                android:id="@+id/seekBarMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" />

            <!-- Sound Effects Volume Label -->
            <TextView
                android:id="@+id/tvEffectsVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sound Effects Volume"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"/>

            <!-- Sound Effects Volume Slider -->
            <SeekBar
                android:id="@+id/seekBarEffects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" />

            <!-- Theme Selection Title -->
            <TextView
                android:id="@+id/tvThemeSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Theme"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="32dp"/>

            <!-- Theme Selection Container (Acts as a Button) -->
            <LinearLayout
                android:id="@+id/themesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="top">
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Back Button (Now Fixed at Bottom-Left) -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Back"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
